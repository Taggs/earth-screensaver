{
  "name": "earth-screensaver",
  "version": "1.0.0",
  "description": "Desktop globe screensaver with weather, day/night cycle, and news",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:scr": "electron-builder --win && node scripts/create-scr.js",
    "build:mac": "electron-builder --mac"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "cesium": "^1.113.0",
    "dotenv": "^16.3.1",
    "suncalc": "^1.9.0",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.screensaver.earth",
    "productName": "EarthScreensaver",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "!src/**/*.map"
    ],
    "extraResources": [
      {
        "from": "src/data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}.${ext}"
    }
  }
}
