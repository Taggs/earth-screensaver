{
  "name": "earth-screensaver",
  "version": "1.0.0",
  "description": "Desktop globe screensaver with weather, day/night cycle, and news",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:scr": "electron-builder --win && node scripts/create-scr.js",
    "build:mac": "electron-builder --mac"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "cesium": "^1.113.0",
    "dotenv": "^16.3.1",
    "suncalc": "^1.9.0",
    "three": "^0.182.0",
    "three-globe": "^2.45.0",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.screensaver.earth",
    "productName": "EarthScreensaver",
    "directories": {
      "output": "dist"
    },
    "asarUnpack": [
      "src/main/config.js"
    ],
    "files": [
      "src/**/*",
      "!src/**/*.map",
      ".env",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "src/data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-Setup.${ext}",
      "sign": null,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
